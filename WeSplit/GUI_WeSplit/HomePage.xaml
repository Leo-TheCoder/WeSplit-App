<Page x:Class="GUI_WeSplit.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:System="clr-namespace:System;assembly=mscorlib"
      xmlns:local="clr-namespace:GUI_WeSplit"
      mc:Ignorable="d" 
      d:DesignHeight="{Binding SystemParameters.PrimaryScreenHeight}" 
      d:DesignWidth="{Binding SystemParameters.PrimaryScreenHeight}"
      Title="HomePage">

    <Page.Resources>

        <SolidColorBrush x:Key="IndicatorColor">Black</SolidColorBrush>

        <Color x:Key="ContentBorderBG">Black</Color>
        <SolidColorBrush x:Key="ContentForeground">white</SolidColorBrush>

        <SolidColorBrush x:Key="MenuForeground">Black</SolidColorBrush>
        <SolidColorBrush x:Key="MenuForegroundHover">#0e67cc</SolidColorBrush>
        <System:Double x:Key="MainBorderOpacity">0.8</System:Double>
        <System:Double x:Key="ButtonSize">18</System:Double>


        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource MenuForeground}"/>
            <Setter Property="FontSize" Value="17.5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
        </Style>


    </Page.Resources>

    <Grid>
        <Border x:Name="HomePageContent"
                            Grid.Column="0"
                                Grid.Row="0"
                                Panel.ZIndex="1">
            <Border x:Name="SeachBorder"
                Height="25"
                    Width="400"
                    CornerRadius="5"
                    BorderBrush="{DynamicResource ContentForeground}"
                    BorderThickness="0 0 0 0.2"
                    Padding="5 0 0 0"
                    Background="Transparent">

                <Border.Triggers>
                    <EventTrigger RoutedEvent="Border.MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <ThicknessAnimation Duration="0:0:0.1"
                                                 From="0 0 0 0.2"
                                                 To="0 0 0 0.5"
                                                 Storyboard.TargetProperty="(Border.BorderThickness)"
                                                 Storyboard.TargetName="SeachBorder"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="Border.MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <ThicknessAnimation Duration="0:0:0.1"
                                                 From="0 0 0 0.5"
                                                 To="0 0 0 0.2"
                                                 Storyboard.TargetProperty="(Border.BorderThickness)"
                                                 Storyboard.TargetName="SeachBorder"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>

                <TextBox x:Name="SearchTextBox"
                         BorderThickness="0"
                         Foreground="{DynamicResource ContentForeground}"
                         Background="Transparent"
                         HorizontalContentAlignment="Center"
                         CaretBrush="White"
                         Margin="0 5 0 0">
                </TextBox>
            </Border>
        </Border>
    </Grid>
</Page>
